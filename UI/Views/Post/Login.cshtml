
@{
    ViewBag.Title = "Login";
}

<h2>登录</h2>

<table>
    <tr>
        <td>用户名：</td>
        <td><input id="UserName" type="text" placeholder="用户名" /></td>
    </tr>
    <tr>
        <td>密码：</td>
        <td><input id="Pass" type="password" placeholder="密码" /></td>
    </tr>
    <tr>
        <td><input id="Button1" type="button" value="登录" onclick="Login()" /></td>
        <td><input id="Button1" type="button" value="注册" onclick="location.href='/Post/LoginAdd'" /></td>
    </tr>
</table>

@section scripts{
    <script>

        function Login() {
            var obj = {};
            obj.UserName = $("#UserName").val();
            obj.Pass = $("#Pass").val();

            $.ajax({
                url: 'http://localhost:62516/api/Login',
                type: 'post',
                dataType: 'json',
                data: obj,
                success: function (d) {
                    if (d > 0) {
                        alert('登录成功');
                        location.href = '/Post/PostShow';
                    }
                    else {
                        alert('登录失败');
                    }
                    
                }
            });
        }
    </script>
    }

